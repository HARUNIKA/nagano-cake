<h1>商品一覧</h1>
<li>
<%= link_to "新規登録",new_admin_item_path ,class: "btn btn-sm btn-success" %>
</li>
<table class="table table-hover table-inverse">
 
  <thead>
    <tr>
     <th>商品ID</th>
      <th>商品名</th>
       <th>税抜価格</th>
        <th>ステータス</th>
        </tr>
      </thead>
    <tbody>
 <% @items.each do |item| %>
　<tr>
    　<td>
    　  <%= item.id %>
    　    </td>
    　     <td>
    　      <%= link_to admin_item_path(item) do %>
             <%= item.name %>
             <% end %>
        　     </td>
              <td>
              <%= item.price %>
            </td>
            <td>
            <%= item.show_status %>
          </td>
        </tr>
    <% end %>
</tbody>
</table>